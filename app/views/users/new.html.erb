<div class="container" style="max-width: 500px">
  <h4 class="text-center mt-5">Start reading Articles, sign up!</h4>
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
      <%= f.label 'email:' %>
      <%= f.email_field :email, class: 'form-control'%>
    </div>
    <div class="text-center">
      <%= f.submit 'Sign up', class: 'btn btn-secondary mt-2 mb-5' %>
    </div>
  <% end %>
  <small>Already have an account? <%= link_to "Log in", login_path %></small>
</div>
