<% content_for :title, "Articles" %>

<h2 class="mt-5 text-center">Welcome to Latest Articles!</h2>

<div class="container">
  <div class="row">
    <div class="col-md-12 px-0">
      <%= form_tag root_path, method: :get, class: 'row mt-5 w-100 justify-content-around' do %>
        <div class="col-9 d-flex w-50">
          <%= text_field_tag :search, params[:search], class: 'form-control me-3', placeholder: 'start typing...' %>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row mt-5">
  <% @articles.each do |article|%>
    <div class="col-sm-12 col-lg-6">
      <div class="card my-3">
        <div class="card-body">
          <h5 class="card-title"><%= article.title.capitalize() %></h5>
          <blockquote class="blockquote mb-0">
            <p class="h6 mb-3"><%= article.body %></p>
            <footer class="blockquote-footer text-right"><cite title="Source Title"><%= article.author %></cite></footer>
          </blockquote>
        </div>
      </div>
    </div>
    <% end %>
</div>